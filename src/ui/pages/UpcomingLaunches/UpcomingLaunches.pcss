@import '../../../variables.pcss';

.upcoming-launches-container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;

  .upcoming-launches-header {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    .upcoming-launches-header-sub {
      margin-left: 8px;
      margin-top: 1rem;

      @media (max-width: 500px) {
        margin: 1rem 3rem 0;
        text-align: center;
      }
    }

    @media (max-width: 500px) {
      margin: 0 1rem;
    }
  }

  .upcoming-launches-search {
    padding: 3rem 3rem 0;
    width: 100%;
  }

  .upcoming-launches {
    margin-top: 3rem;
  }
}
